                                  for (var i = 1; i < lines.length; i++) {
                                      try {
                                          var fila = lines[i].split(",");
                                          if (fila.length >= 2) {
                                              datos.push([fila[0], Number.parseFloat(fila[1])]);
                                          }

                                      } catch (error) {
                                          //console.error(error);
